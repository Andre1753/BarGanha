@model BarGanha.ViewModels.OfertaViewModel

@{
    var produto = ViewBag.produto;
    var meusProdutos = ViewBag.meusProdutos;
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>OFERTA DE TROCA</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                @if (produto.ImagemProduto != null || produto.ImagemProduto == "")
                {
                    var str = produto.ImagemProduto;
                    <img src="~/images/@str" class="img-fluid" style="height: 80%; width: 80%;" ; alt="Image" asp-append-version="true" />
                }
                <h2>@produto.NomeProduto</h2>
                <h5>R$ @produto.Preco</h5>
            </div>

            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="card rounded-lg" style="background-color: rgb(32, 32, 32)">
                    <div class="card-title text-center">
                        <h3 class="text-white mt-2 -mb-4">Meus Produtos</h3>
                    </div>
                    <div class="card-body -mt-3 p-3">
                        <div class="card-title text-center">
                            <h3 class="text-white mt-2 -mb-4">Meus Produtos</h3>
                        </div>
                        <div class="card dropzone">
                            @foreach (var meuProduto in meusProdutos)
                            {
                                <div class="col-md-4 col-sm-4">
                                    <div class="card-drag">
                                        <img src="~/images/@meuProduto.ImagemProduto" class="img-fluid" style="height: 100px; width:100px" ; alt="Image" asp-append-version="true" />
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                        <div class="card p-3" style="background-color: rgb(32, 32, 32)">
                            <div class="card-title text-center">
                                <h3 class="text-white">Oferta</h3>
                            </div>
                            <div class="card-body -mt-3 p-3" style="height: 400px">
                                <div class="card dropzone" style="height: 300px">
                                
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<script src="~/js/drag_drop.js" defer></script>


