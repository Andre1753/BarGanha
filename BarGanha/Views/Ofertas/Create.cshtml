@model BarGanha.ViewModels.OfertaViewModel

@{
    ViewBag.Title = "Create";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>OFERTA DE TROCA</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <img src="~/images/@ViewBag.produto.ImagemProduto" class="img-fluid" style="height: 70%; width: 80%;" ; alt="Image" asp-append-version="true" />

                <div >
                    <h2>@ViewBag.produto.NomeProduto</h2>
                    <h5>R$ @ViewBag.produto.Preco</h5>
                </div>
            </div>

            <div class="col-xl-7 col-lg-7 col-md-6">
                @using (Html.BeginForm())
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col" class="text-center">Produto</th>
                                <th scope="col" class="text-center">Preço Estimado</th>
                                <th scope="col" class="text-center">Trocar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.meusProdutos.Count > 0)
                            {
                                var i = 0;

                                @foreach (var meuProduto in ViewBag.meusProdutos)
                                {

                                    <tr>
                                        <td class="text-center">
                                            <img src="~/images/@meuProduto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                                        </td>
                                        <td class="text-center">@meuProduto.NomeProduto</td>
                                        <td class="text-center">R$ @meuProduto.Preco</td>
                                        <td class="text-center">
                                            @Html.CheckBoxFor(m => Model.Ofertas[i].Selected)
                                        </td>
                                    </tr>

                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Você não tem produtos registrados para trocar</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <input asp-for="produtoId" class="form-control" value="@ViewBag.produto.ProdutoId" hidden/>
                    <input type="submit" value="Enviar" />
                }
            </div>
        </div>
    </div>
</div>
