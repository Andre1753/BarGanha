@model BarGanha.ViewModels.OfertaViewModel

@{
    var produto = ViewBag.produto;
    var meusProdutos = ViewBag.meusProdutos;
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>OFERTA DE TROCA</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                @if (produto.ImagemProduto != null || produto.ImagemProduto == "")
                {
                    var str = produto.ImagemProduto;
                    <img src="~/images/@str" class="img-fluid" style="height: 70%; width: 80%;" ; alt="Image" asp-append-version="true" />
                }
                <h2>@produto.NomeProduto</h2>
                <h5>R$ @produto.Preco</h5>
            </div>

            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="card rounded-lg" style="background-color: rgb(32, 32, 32)">
                    <div class="card-body p-3">
                        <div class="card-title text-center">
                            <h3 class="text-white mt-2 -mb-4">Meus Produtos</h3>
                        </div>
                        <div class="card">
                            <div class="row dropzone" >
                                @foreach (var meuProduto in meusProdutos)
                                {
                                    <div class="card-drag rounded-lg col-md-3 col-12 rounded p-2 -mt-2">
                                        <img src="~/images/@meuProduto.ImagemProduto" class="img-fluid border border-2 border-bottom-0 border-dark" style="height: 60%; width:110%" ; alt="Image" asp-append-version="true" />
                                        <div style="background-color: #d33b33">
                                            <div class="text-center">
                                                <h2 class="text-white" style="font-size: 15px">@meuProduto.NomeProduto</h2>
                                            </div>

                                            <div class="text-center">
                                                <span class="text-white"> R$ @meuProduto.Preco</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card rounded-lg mt-2" style="background-color: rgb(32, 32, 32)">
                    <div class="card-body p-3">
                        <div class="card-title text-center">
                            <h3 class="text-white mt-2 -mb-4">Ofertas</h3>
                        </div>
                        <div class="card">
                            <div class="row dropzone">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>

<script src="~/js/drag_drop.js" defer></script>


