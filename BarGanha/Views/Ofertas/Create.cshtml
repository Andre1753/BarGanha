@model BarGanha.ViewModels.OfertaViewModel
@{ var produto = ViewBag.produto;}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>OFERTA DE TROCA</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                @if (produto.ImagemProduto != null || produto.ImagemProduto == "")
                {
                    var str = produto.ImagemProduto;
                    <img src="~/images/@str" class="img-fluid" style="height: 80%; width: 80%;" ; alt="Image" asp-append-version="true" />
                }
                <h2>@produto.NomeProduto</h2>
                <h5>R$ @produto.Preco</h5>
            </div>

            @*<div class="col-xl-7 col-lg-7 col-md-6">
            <div class="single-product-details p-3" style="background-color: #FFFFEB;">
                <h2>@produto.NomeProduto</h2>
                <h5>R$ @produto.Preco</h5>
                <p>
                    <h4>Descrição:</h4>
                <p style="height: 212px;">
                    @produto.Descricao
                </p>
            </div>
        </div>
            *@
        </div>
    </div>
</div>

<div class="boards">
    <div class="board">
        <h3>Todo</h3>
        <div class="dropzone">
            <div class="card-drag" draggable="true">
                <div class="status green"></div>
                <div class="content"> Do videos!</div>
            </div>
        </div>
    </div>
    <div class="board">
        <h3>In progress</h3>
        <div class="dropzone">
            <div class="card-drag" draggable="true">
                <div class="status blue"></div>
                <div class="content"> Forum</div>
            </div>
        </div>
    </div>
    <div class="board">
        <h3>Done</h3>
        <div class="dropzone">
            <div class="card-drag" draggable="true">
                <div class="status red"></div>
                <div class="content"> Next Level Week</div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/drag_drop.js" defer></script>


