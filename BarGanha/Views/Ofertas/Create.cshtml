@model BarGanha.ViewModels.OfertaViewModel

@{
    ViewBag.Title = "Create";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>TROCANDO COM @ViewBag.user.UserName</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="shop-detail-box-main">
    <div class="container">

        @using (Html.BeginForm())
        {
            <input asp-for="usuarioId" class="form-control" value="@ViewBag.user.Id" hidden />

            <div class="row justify-content-end">
                <button class="btn hvr-hover mr-3 mb-1" type="submit" style="background-color: #d33b33; color: #fff;">Enviar</button>                
            </div>

            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center" colspan="5">Produtos de  @ViewBag.user.UserName</th>

                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col" class="text-center">Produto</th>
                                <th scope="col" class="text-center">Preço Estimado</th>
                                <th scope="col" class="text-center">Localização</th>
                                <th scope="col" class="text-center">Selecionar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                            }

                            @foreach (var produto in @ViewBag.produtos)
                            {

                                <tr>
                                    <td class="text-center">
                                        <img src="~/images/@produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                                    </td>

                                    <td class="text-center">@produto.NomeProduto</td>

                                    <td class="text-center">R$ @produto.Preco</td>

                                    <td class="text-center">@produto.Cidade / @produto.Estado</td>

                                    <td class="text-center">
                                        @Html.CheckBoxFor(m => Model.Selecionados[i].Selected)
                                    </td>
                                </tr>

                                i++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="col-12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center" colspan="5">Meus Produtos</th>

                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col" class="text-center">Produto</th>
                                <th scope="col" class="text-center">Preço Estimado</th>
                                <th scope="col" class="text-center">Localização</th>
                                <th scope="col" class="text-center">Trocar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.meusProdutos.Count > 0)
                            {
                                var j = 0;

                                @foreach (var meuProduto in ViewBag.meusProdutos)
                                {

                                    <tr>
                                        <td class="text-center">
                                            <img src="~/images/@meuProduto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                                        </td>

                                        <td class="text-center">@meuProduto.NomeProduto</td>

                                        <td class="text-center">R$ @meuProduto.Preco</td>

                                        <td class="text-center">@meuProduto.Cidade / @meuProduto.Estado</td>

                                        <td class="text-center">
                                            @Html.CheckBoxFor(m => Model.Ofertas[j].Selected)
                                        </td>
                                    </tr>

                                    j++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Você não tem produtos registrados para trocar</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
    </div>
</div>
