<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>OFERTAS</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="container mt-2">
    <div class="row justify-content-end mb-2" style="padding-right:15px">
        <a class="btn hvr-hover" style="background-color: #d33b33; color: #fff;" asp-controller="Produtos" asp-action="Create">Adicionar Produto</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col" class="text-center">Produto</th>
                <th scope="col" class="text-center">Nome</th>
                <th scope="col" class="text-center">Preço Estimado</th>
                <th scope="col" colspan="3" class="text-center">Produtos Ofertados</th>
                <th scope="col" class="text-center">Ações</th>

            </tr>
        </thead>
        <tbody>
            @if (@ViewBag.ofertas.Count > 0)
            {
                @foreach (var oferta in @ViewBag.ofertas)
                {

                    <tr>
                        <td class="text-center">
                            <img src="~/images/@oferta.Produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                        </td>
                        <td class="text-center">@oferta.Produto.NomeProduto</td>
                        <td class="text-center">R$ @oferta.Produto.Preco</td>
                        <td colspan="3" class="text-center">
                            @foreach (var produtoOfertado in oferta.produtosOfertados)
                            {
                                <img src="~/images/@produtoOfertado.produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                            }
                        </td>
                        <td class="text-center">
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">Nenhum produto registrado</td>
                </tr>
            }
        </tbody>
    </table>
</div>