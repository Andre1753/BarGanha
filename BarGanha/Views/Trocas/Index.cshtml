<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>TROCAS</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="container mt-2">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col" colspan="7" class="text-center">Trocas recebidas finalizadas</th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th scope="col" class="text-center">Produto</th>
                <th scope="col" colspan="4" class="text-center">Produtos Ofertados</th>
                <th scope="col" class="text-center">Ações</th>

            </tr>
        </thead>
        <tbody>
            @if (@ViewBag.trocas.Count > 0)
            {
                @foreach (var troca in @ViewBag.trocas)
                {
                    <tr>
                        <td class="text-center">
                            <div>
                                <img src="~/images/@troca.Oferta.Produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                            </div>

                            <div>
                                @troca.Oferta.Produto.NomeProduto
                            </div>

                            <div>
                                R$ @troca.Oferta.Produto.Preco
                            </div>
                        </td>
                        <td colspan="4">

                            <div class="row ml-2 text-center justify-content-center">
                                @foreach (var produtoOfertado in troca.Oferta.produtosOfertados)
                                {
                                    <div class="cols-4">
                                        <div>
                                            <img src="~/images/@produtoOfertado.produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                                        </div>

                                        <div>
                                            @produtoOfertado.produto.NomeProduto
                                        </div>

                                        <div>
                                            R$ @produtoOfertado.produto.Preco
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm" style="background-color:#d33b33; color:#ffffff;" asp-controller="Ofertas" asp-action="Delete" asp-route-id="@troca.Oferta.OfertaId">Deletar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">Nenhuma troca enviada finalizada</td>
                </tr>
            }
        </tbody>
    </table>
