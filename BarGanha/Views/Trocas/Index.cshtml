<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>TROCAS</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="container mt-2">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col" colspan="9" class="text-center">Trocas enviadas finalizadas</th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th scope="col" class="text-center">Usuario</th>
                <th scope="col" colspan="3" class="text-center">Produtos Selecionados</th>
                <th scope="col" colspan="3" class="text-center">Produtos Ofertados</th>
                <th scope="col" class="text-center">Ações</th>

            </tr>
        </thead>
        <tbody>
            @if (@ViewBag.trocasEnviadas.Count > 0)
            {
                @foreach (var trocaEnv in @ViewBag.trocasEnviadas)
                {
                    <tr>
                        <td class="text-center">
                            @trocaEnv.UserDono.UserName
                        </td>

                        <td colspan="3">
                            <div class="row ml-2 text-center justify-content-around">
                                @foreach (var produtoSelecionado in trocaEnv.Oferta.produtosSelecionados)
                                {
                                <div class="cols-4">
                                    <div>
                                        <img src="~/images/@produtoSelecionado.produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                                    </div>

                                    <div>
                                        @produtoSelecionado.produto.NomeProduto
                                    </div>

                                    <div style="margin-top:-3px">
                                        R$ @produtoSelecionado.produto.Preco
                                    </div>
                                    
                                    <div style="margin-top:-3px">
                                        @produtoSelecionado.produto.Cidade / @produtoSelecionado.produto.Estado
                                    </div>
                                </div>
                                }
                            </div>
                        </td>

                        <td colspan="3">
                            <div class="row ml-2 text-center justify-content-around">
                                @foreach (var produtoOfertado in trocaEnv.Oferta.produtosOfertados)
                                {
                                <div class="cols-4">
                                    <div>
                                        <img src="~/images/@produtoOfertado.produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                                    </div>

                                    <div>
                                        @produtoOfertado.produto.NomeProduto
                                    </div>

                                    <div style="margin-top:-3px">
                                        R$ @produtoOfertado.produto.Preco
                                    </div>

                                    <div style="margin-top:-3px">
                                        @produtoOfertado.produto.Cidade / @produtoOfertado.produto.Estado
                                    </div>
                                </div>
                                }
                            </div>
                        </td>
                        <td class="text-center">
                            @if (!trocaEnv.Liberado)
                            {
                                <div class="mb-1">
                                    <a class="btn btn-sm" style="background-color:blue; color:#ffffff;" asp-controller="Trocas" asp-action="Liberar" asp-route-id="@trocaEnv.TrocaId">Liberar dados p/ comunicaçao</a>
                                </div>

                                <div>
                                    <a class="btn btn-sm" style="background-color:#d33b33; color:#ffffff;" onclick="return confirm('Tem certeza que deseja cancelar esta troca?');" asp-controller="Trocas" asp-action="Delete" asp-route-id="@trocaEnv.TrocaId">Cancelar Troca</a>
                                </div>
                            }
                            else
                            {
                                <span class="badge badge-warning">Aguarde o contato de @trocaEnv.UserDono.UserName</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">Nenhuma troca enviada finalizada</td>
                </tr>
            }
        </tbody>
    </table>
