@using Microsoft.AspNetCore.Identity
@using BarGanha.BLL.Models
@inject SignInManager<Usuario> SignInManager

@if(SignInManager.IsSignedIn(User))
{
    <form asp-action="Logout" asp-controller="Usuarios" id="formularioLogout">
        <ul>
            <li>
                <a class="nav-link white-text" style="cursor: pointer; margin-left: 20px; color: #333;" onclick="document.getElementById('formularioLogout').submit();">Sair</a>
            </li>
        </ul>

    </form>
}