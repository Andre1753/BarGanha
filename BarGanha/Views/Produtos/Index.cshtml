<!-- Start Top Search -->
<div class="top-search">
    <div class="container">
        <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-addon close-search"><i class="fas fa-times"></i></span>
        </div>
    </div>
</div>
<!-- End Top Search -->
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>PRODUTOS</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Page  -->
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                <div class="product-categorie-box ">
                    <div class="search-product">
                        <form asp-controller="Produtos" asp-action="Index">
                            <input class="form-control" placeholder="Procure por um produto" type="text" name="SearchString" value="@ViewBag.searchString"/>
                            <button type="submit"> <i class="fas fa-search" value="Buscar"></i> </button>
                        </form>
                    </div>
                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h3>Categorias</h3>
                        </div>
                        <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">
                            <form asp-controller="Produtos" asp-action="Index">
                                <input style="display:none" name="categoria" value="5" />
                                @if (@ViewBag.categoria == 5)
                                {
                                    <input class="list-group-item list-group-item-action active" type="submit" value="Veiculos" />
                                }
                                else
                                {
                                    <input class="list-group-item list-group-item-action" type="submit" value="Veiculos" />
                                }
                            </form>

                            <form asp-controller="Produtos" asp-action="Index">
                                <input style="display:none" name="categoria" value="1" />
                                @if (@ViewBag.categoria == 1)
                                {
                                    <input class="list-group-item list-group-item-action active" type="submit" value="Móveis" />
                                }
                                else
                                {
                                    <input class="list-group-item list-group-item-action" type="submit" value="Móveis" />
                                }
                            </form>
                            <form asp-controller="Produtos" asp-action="Index">
                                <input style="display:none" name="categoria" value="3" />
                                @if (@ViewBag.categoria == 3)
                                {
                                    <input class="list-group-item list-group-item-action active" type="submit" value="Eletrodomésticos" />
                                }
                                else
                                {
                                    <input class="list-group-item list-group-item-action" type="submit" value="Eletrodomésticos" />
                                }
                            </form>

                            <form asp-controller="Produtos" asp-action="Index">
                                <input style="display:none" name="categoria" value="2" />
                                @if (@ViewBag.categoria == 2)
                                {
                                    <input class="list-group-item list-group-item-action active" type="submit" value="Eletrônicos" />
                                }
                                else
                                {
                                    <input class="list-group-item list-group-item-action" type="submit" value="Eletrônicos" />
                                }
                            </form>

                            <form asp-controller="Produtos" asp-action="Index">
                                <input style="display:none" name="categoria" value="4" />
                                @if (@ViewBag.categoria == 4)
                                {
                                    <input class="list-group-item list-group-item-action active" type="submit" value="Vestuários" />
                                }
                                else
                                {
                                    <input class="list-group-item list-group-item-action" type="submit" value="Vestuários" />
                                }
                            </form>

                            <form asp-controller="Produtos" asp-action="Index">
                                <input style="display:none" name="categoria" value="6" />
                                @if (@ViewBag.categoria == 6)
                                {
                                    <input class="list-group-item list-group-item-action active" type="submit" value="Outros" />
                                }
                                else
                                {
                                    <input class="list-group-item list-group-item-action" type="submit" value="Outros" />
                                }
                            </form>
                        </div>
                    </div>   
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-item-filter row">
                        <div class="col-12 col-sm-8 text-center text-sm-left">
                            <div class="toolbar-sorter-right">
                                <span>Ordenar:</span>
                                <select id="basic" class="selectpicker show-tick form-control">
                                    <option value="1">Relevância</option>
                                    <option value="2">Maior Preço → Menor Preço</option>
                                    <option value="3">Menor Preço → Maior Preço</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-12 col-sm-4 text-center text-sm-right">
                            <ul class="nav nav-tabs ml-auto">
                                <li>
                                    <a class="nav-link active" href="#grid-view" data-toggle="tab"> <i class="fas fa-th"></i> </a>
                                </li>
                                <li>
                                    <a class="nav-link" href="#list-view" data-toggle="tab"> <i class="fas fa-list-ul"></i> </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="row product-categorie-box">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                <div class="row">
                                    @foreach (var produto in ViewBag.produtos)
                                    {
                                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                            <div class="products-single fix">
                                                <div class="box-img-hover">
                                                    <div class="type-lb">
                                                        <p class="new">Novo</p>
                                                    </div>
                                                    <img src="~/images/@produto.ImagemProduto" class="img-fluid" style="height: 250px; width:90% " ; alt="Image" asp-append-version="true" />
                                                </div>

                                                <div class="why-text">
                                                    <div class="row">
                                                        <div class="col-md-7">
                                                            <h4>@produto.NomeProduto</h4>
                                                            <h5> R$ @produto.Preco</h5>
                                                        </div>
                                                        <div class="col-md-5">
                                                            <a class="btn hvr-hover text-white mt-2" asp-controller="Produtos" asp-action="Details" asp-route-id="@produto.ProdutoId">Visualizar</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div role="tabpanel" class="tab-pane fade" id="list-view">
                                <div class="list-view-box">
                                    @foreach (var produto in ViewBag.produtos)
                                    {
                                        <div class="row">
                                            <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                                <div class="products-single fix">
                                                    <div class="box-img-hover">
                                                        <div class="type-lb">
                                                            <p class="new">Novo</p>
                                                        </div>
                                                        <img src="~/images/@produto.ImagemProduto" class="img-fluid" style="height: 350px; width:110%"; alt="Image" asp-append-version="true" />
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8">
                                                <div class="why-text full-width">
                                                    <h4>@produto.NomeProduto</h4>
                                                    <h5> R$ @produto.Preco</h5>
                                                    <p style="height: 212px;">
                                                        @produto.Descricao
                                                    </p>

                                                    <div class="row">
                                                        <a class="btn hvr-hover text-white mx-2" asp-controller="Produtos" asp-action="Details" asp-route-id="@produto.ProdutoId">Visualizar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Shop Page -->