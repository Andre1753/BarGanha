@using Microsoft.AspNetCore.Identity
@using BarGanha.BLL.Models
@inject SignInManager<Usuario> SignInManager

@{
    var produto = ViewBag.produto;
    var meusProdutos = ViewBag.meusProdutos;
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>@produto.NomeProduto</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="container mt-3">
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-6">
            <img src="~/images/@produto.ImagemProduto" class="img-fluid" style="height: 82%; width: 100%;" ; alt="Image" asp-append-version="true" />
        </div>

        <div class="col-xl-8 col-lg-8 col-md-6">
            <div class="single-product-details p-3" style="background-color: #FFFFEB;">
                <h2>@produto.NomeProduto</h2>
                <h5>R$ @produto.Preco</h5>
                <p>
                    <h4>Descrição:</h4>
                <p style="height: 111px; overflow-y: auto">
                    @produto.Descricao
                </p>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn hvr-hover" style="background-color: #d33b33; margin-top: -8px; color: #fff;" asp-controller="Ofertas" asp-action="Create" asp-route-id="@produto.ProdutoId">Ofertar Troca</a>
                }

            </div>
        </div>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="card rounded-lg" style="background-color: rgb(32, 32, 32)">
                    <div class="card-body p-3">
                        <div class="card-title text-center" style="max-height: 20px">
                            <h3 class="text-white">Meus Produtos</h3>
                        </div>
                        <div class="card">
                            <div class="row dropzone">
                                @foreach (var meuProduto in meusProdutos)
                                {
                                    <div class="card-drag rounded-lg col-md-3 col-12 mb-1">
                                        <img src="~/images/@meuProduto.ImagemProduto" class="img-fluid border border-2 border-bottom-0 border-dark" style="height: 60%; width:100%" ; alt="Image" asp-append-version="true" />
                                        <div style="background-color: #d33b33">
                                            <div class="text-center -mb-1">
                                                <h2 class="text-white text-truncate h-4" style="font-size: 15px">@meuProduto.NomeProduto</h2>
                                            </div>

                                            <div class="text-center">
                                                <span class="text-white"> R$ @meuProduto.Preco</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card rounded-lg" style="background-color: rgb(32, 32, 32)">
                    <div class="card-body p-3">
                        <div class="card-title justify-content-between px-4" style="max-height: 20px">
                            <div class="row justify-content-between">
                                <h3 class="text-white">Produtos Ofertado</h3>

                                <a class="btn hvr-hover" style="background-color: #d33b33; margin-top: -8px; color: #fff;" onclick="abc()">Ofertar Troca</a>
                            </div>
                        </div>
                        <div class="card">
                            <div class="row dropzone">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/js/drag_drop.js" defer></script>
</div>
<!-- End Cart -->