@using Microsoft.AspNetCore.Identity
@using BarGanha.BLL.Models
@inject SignInManager<Usuario> SignInManager

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>@ViewBag.produto.NomeProduto</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="container mt-3">
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-6">
            <img src="~/images/@ViewBag.produto.ImagemProduto" class="img-fluid" style="height: 82%; width: 100%;" ; alt="Image" asp-append-version="true" />
        </div>

        <div class="col-xl-8 col-lg-8 col-md-6">
            <div class="single-product-details p-3" style="background-color: #FFFFEB;">
                <h2>@ViewBag.produto.NomeProduto</h2>
                <h5>R$ @ViewBag.produto.Preco</h5>
                <p>
                    <h4>Descrição:</h4>
                <p style="height: 111px; overflow-y: auto">
                    @ViewBag.produto.Descricao
                </p>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn hvr-hover" style="background-color: #d33b33; margin-top: -8px; color: #fff;" asp-controller="Ofertas" asp-action="Create" asp-route-id="@ViewBag.produto.ProdutoId">Ofertar Troca</a>
                }

            </div>
        </div>
    </div>
   
    <script src="~/js/drag_drop.js" defer></script>
</div>
<!-- End Cart -->