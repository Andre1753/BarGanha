@{
    var meusProdutos = ViewBag.meusProdutos;
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>MEUS PRODUTOS</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

<div class="container mt-2">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col" class="text-center">Anuncio</th>
                <th scope="col" class="text-center">Produto</th>
                <th scope="col" class="text-center">Preço Estimado</th>s
                <th scope="col" colspan="2" class="text-center">Descrição</th>
                <th scope="col" class="text-center">Açoes</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var produto in meusProdutos)
            {

                <tr>
                    <td class="text-center">
                        <img src="~/images/@produto.ImagemProduto" width="80px" height="80px" asp-append-version="true" />
                    </td>
                    <td class="text-center">
                        @if (produto.Anunciar)
                        {
                            <span class="badge badge-success">Anunciado</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Não Anunciado</span>
                        }
                    </td>
                    <td class="text-center">@produto.NomeProduto</td>
                    <td class="text-center">R$ @produto.Preco</td>
                    <td colspan="2" class="text-center">@produto.Descricao</td>
                    <td class="text-center">
                        <a class="btn" style="background-color:#ff6a00; color:#ffffff;" asp-action="ChangeAnunciar" asp-route-id="@produto.ProdutoId">
                            @if (produto.Anunciar)
                            {
                                <span>Remover Anuncio</span>
                            }
                            else
                            {
                                <span>Anunciar</span>
                            }
                        </a>
                        <!--<a class="btn text-white-50" style="background-color:#0026ff;">Editar</a> -->
                    </td>
                </tr>
            }            
        </tbody>
    </table>   
</div>